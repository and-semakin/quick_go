{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "react/jsx-filename-extension": "off"
    },
    "overrides": [
        {
            "files": ["*.test.js", "*.spec.js"],
            "env": {
                "jest": true,
                "browser": false
            }
        }
    ]
}